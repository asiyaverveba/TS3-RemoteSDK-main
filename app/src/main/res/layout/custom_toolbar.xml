<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewHeaderSettings"
        android:layout_width="@dimen/margin_30"
        android:layout_height="@dimen/margin_30"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/settings_icon"/>

    <ImageView
        android:id="@+id/imageViewHeaderLock"
        android:layout_width="@dimen/margin_30"
        android:layout_height="@dimen/margin_30"
        android:contentDescription="@null"
        android:layout_toEndOf="@id/imageViewHeaderSettings"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/tech_lock"/>

    <TextView
        android:id="@+id/textViewHeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:textSize="@dimen/textSize_20"
        android:text="@string/app_name"/>

    <ImageView
        android:id="@+id/imageViewHeaderHome"
        android:layout_width="@dimen/margin_30"
        android:layout_height="@dimen/margin_30"
        android:contentDescription="@null"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:src="@drawable/tapas_home_icon"/>

</RelativeLayout>
