<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--  this is for font-->
        <item name="colorAccent">@color/colorAccent</item>

        <!--  this is for action bar text color-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:dropDownListViewStyle">@style/myDropDownListViewStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!--  this is for action bar text color-->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <!--  <item name="logo">@drawable/verveba_logo</item>
         <item name="displayOptions">useLogo|showHome</item>-->
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--  this is for dropdown background color-->
    <style name="myDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="surveyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#00E5FF</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="surveySpinner" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#00E5FF</item>
        <item name="colorControlActivated">#00E5FF</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="InputLayoutEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="ThemeSpinner">
        <!-- Color when pressed -->

        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#ffffff</item>

        <item name="android:colorBackground">#23014c</item>

        <item name="android:hint">Please Select a site</item>
    </style>


    <style name="ThemeSpinnerCapture">
        <!-- Color when pressed -->

        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#4e00ff</item>

        <item name="android:textColor">#4e00ff</item>

        <item name="android:colorBackground">#ffffff</item>

    </style>

