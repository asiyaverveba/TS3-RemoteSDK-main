<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <!--<gradient
                android:startColor="#ffaa00"
                android:centerColor="#ffc801"
                android:centerY="0.75"
                android:endColor="#ffbb00"
                android:angle="0"
                />-->
            <gradient
                android:startColor="@color/white_transparant"
                android:centerColor="@color/white_transparant"
                android:centerY="0.75"
                android:endColor="@color/white_transparant"
                android:angle="0"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/white_transparant"
                    android:centerColor="@color/white_transparant"
                    android:centerY="0.75"
                    android:endColor="@color/white_transparant"
                    android:angle="0"
                    />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#008000"
                    android:endColor="#33FF33"
                    android:angle="0" />
            </shape>
        </clip>
    </item>

</layer-list>